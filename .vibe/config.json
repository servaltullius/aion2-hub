{
  "project_name": "AION2_HUB",
  "root": ".",
  "exclude_dirs": [
    "node_modules",
    "vendor",
    "third_party",
    "external",
    "extern",
    "deps",
    ".git",
    ".vibe",
    ".venv",
    "venv",
    ".tox",
    ".pytest_cache",
    ".mypy_cache",
    ".ruff_cache",
    ".cache",
    ".idea",
    "dist",
    "build",
    "out",
    "coverage",
    "bin",
    "obj",
    "artifacts",
    "target",
    ".gradle",
    ".dart_tool",
    ".next",
    ".nuxt",
    ".svelte-kit",
    ".turbo",
    ".tmp",
    "__pycache__"
  ],
  "include_globs": [
    "**/*.cs",
    "**/*.xaml",
    "**/*.fs",
    "**/*.vb",
    "**/*.py",
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.go",
    "**/*.rs",
    "**/*.java",
    "**/*.kt",
    "**/*.c",
    "**/*.h",
    "**/*.cpp",
    "**/*.hpp",
    "**/*.csproj",
    "**/*.sln",
    "**/*.fsproj",
    "**/*.vbproj",
    "**/*.md",
    "**/*.json",
    "**/*.yml",
    "**/*.yaml",
    "**/*.toml",
    "**/*.xml"
  ],
  "critical_tags": [
    "@critical",
    "CRITICAL:"
  ],
  "context": {
    "latest_file": ".vibe/context/LATEST_CONTEXT.md",
    "max_recent_files": 12
  },
  "quality_gates": {
    "cycle_block": true,
    "dotnet_build_block_on_increase": true,
    "typecheck_prefer_solution": false,
    "complexity_warn_threshold": 15,
    "max_method_lines_warn": 50,
    "max_nesting_warn": 4,
    "max_params_warn": 5,
    "typecheck_cmd": [
      "pnpm",
      "run",
      "typecheck"
    ],
    "typecheck_when_any_glob": [
      "**/*.ts",
      "**/*.tsx"
    ]
  },
  "placeholders": {
    "enabled": true,
    "target_lang": "korean",
    "bad_unit_words_ko": [
      "초",
      "분",
      "시간",
      "포인트",
      "%",
      "동안",
      "초당"
    ]
  },
  "profiling": {
    "enabled_by_default": false,
    "mode": "dotnet",
    "entry": null
  },
  "architecture": {
    "js_aliases": {
      "@aion2/core": "packages/core/src",
      "@aion2/db": "packages/db/src",
      "@aion2/module-links": "packages/modules/links",
      "@aion2/module-notices": "packages/modules/notices",
      "@aion2/module-planner": "packages/modules/planner"
    },
    "rules": [
      {
        "name": "packages-must-not-import-apps",
        "from_globs": ["packages/**"],
        "to_globs": ["apps/**"],
        "reason": "Keep packages reusable. Apps depend on packages, not the other way around."
      },
      {
        "name": "api-must-not-import-other-apps",
        "from_globs": ["apps/api/**"],
        "to_globs": ["apps/web/**", "apps/worker/**", "apps/desktop/**"],
        "reason": "Apps should not cross-import each other; share code via packages/*."
      },
      {
        "name": "web-must-not-import-other-apps",
        "from_globs": ["apps/web/**"],
        "to_globs": ["apps/api/**", "apps/worker/**", "apps/desktop/**"],
        "reason": "Apps should not cross-import each other; share code via packages/*."
      },
      {
        "name": "worker-must-not-import-other-apps",
        "from_globs": ["apps/worker/**"],
        "to_globs": ["apps/api/**", "apps/web/**", "apps/desktop/**"],
        "reason": "Apps should not cross-import each other; share code via packages/*."
      },
      {
        "name": "desktop-must-not-import-other-apps",
        "from_globs": ["apps/desktop/**"],
        "to_globs": ["apps/api/**", "apps/web/**", "apps/worker/**"],
        "reason": "Apps should not cross-import each other; share code via packages/*."
      },
      {
        "name": "web-must-not-import-db",
        "from_globs": ["apps/web/**"],
        "to_globs": ["packages/db/**"],
        "reason": "The web UI should not directly access the database layer."
      },
      {
        "name": "module-links-must-not-import-other-modules",
        "from_globs": ["packages/modules/links/**"],
        "to_globs": ["packages/modules/notices/**", "packages/modules/planner/**"],
        "reason": "Modules should be independent; compose at the app level (web/desktop)."
      },
      {
        "name": "module-notices-must-not-import-other-modules",
        "from_globs": ["packages/modules/notices/**"],
        "to_globs": ["packages/modules/links/**", "packages/modules/planner/**"],
        "reason": "Modules should be independent; compose at the app level (web/desktop)."
      },
      {
        "name": "module-planner-must-not-import-other-modules",
        "from_globs": ["packages/modules/planner/**"],
        "to_globs": ["packages/modules/links/**", "packages/modules/notices/**"],
        "reason": "Modules should be independent; compose at the app level (web/desktop)."
      }
    ]
  },
  "checks": {
    "doctor": [],
    "precommit": []
  }
}
