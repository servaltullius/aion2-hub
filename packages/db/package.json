{
  "name": "@aion2/db",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "prisma"
  ],
  "scripts": {
    "build": "node scripts/prisma.mjs generate && tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "test": "vitest run --passWithNoTests",
    "prisma:validate": "node scripts/prisma.mjs validate",
    "prisma:generate": "node scripts/prisma.mjs generate",
    "prisma:migrate": "node scripts/prisma.mjs migrate dev",
    "prisma:studio": "node scripts/prisma.mjs studio"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0"
  },
  "devDependencies": {
    "dotenv": "^17.2.3",
    "prisma": "^7.3.0"
  }
}
